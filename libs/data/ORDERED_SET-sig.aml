signature ORDERED_SET =
sig
    include SET

    val get :		set -> (item * set) option
    val appr :		(item -> unit) -> set -> unit
    val foldl :		(item * 'a -> 'a) -> 'a -> set -> 'a
    val foldr :		(item * 'a -> 'a) -> 'a -> set -> 'a
end
